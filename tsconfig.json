{
	"compilerOptions": {
		"baseUrl": ".",

		"paths": {
			"~/*": ["src/*"],
			"~/public/*": ["src/public/*"],
			"~/components/*": ["src/components/*"],
			"~/features/*": ["src/features/*"],
			"~/backend/*": ["src/backend/*"],
			"~/assets/*": ["src/assets/*"],
			"~/utils/*": ["src/utils/*"],
			"~/services/*": ["src/services/*"]
		},
		"target": "es5",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"types": ["cypress", "@types/jest","@testing-library/jest-dom"]
	},
	"include": [
		"next-env.d.ts",
		"jest-dom.d.ts",
		"**/*.ts",
		"**/*.tsx",
		"jest.setup.ts",
		"jest.config.js",
		"../node_modules/cypress"
	],
	"exclude": ["node_modules"]
}
